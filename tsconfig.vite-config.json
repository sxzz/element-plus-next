{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "types": ["node", "vitest"],
    "skipLibCheck": true,
    "lib": ["es2021"]
  },
  "include": [
    "**/vite.config.*",
    "**/vitest.config.*",
    "**/vite.init.*",
    "packages/node/*/src/**/*",
    "packages/node/*/package.json"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
